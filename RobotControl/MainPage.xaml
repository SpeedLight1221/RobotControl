<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotControl.MainPage"
                 MaximumWidthRequest="500">
    

    <ScrollView>
        <Grid>





            <Grid VerticalOptions="End" Padding="5" HeightRequest="200" ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*">
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="0" Grid.Row="0" x:Name="QuickPos1" Text="1" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="1" Grid.Row="0" x:Name="QuickPos2" Text="2" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="2" Grid.Row="0" x:Name="QuickPos3" Text="3" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="3" Grid.Row="0" x:Name="QuickPos4" Text="4" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="4" Grid.Row="0" x:Name="QuickPos5" Text="5" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>

                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="0" Grid.Row="1" x:Name="QuickPos6" Text="6" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="1" Grid.Row="2" x:Name="QuickPos7" Text="7" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="2" Grid.Row="3" x:Name="QuickPos8" Text="8" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="3" Grid.Row="4" x:Name="QuickPos9" Text="9" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
                <Button HeightRequest="70" WidthRequest="70" Margin="5" Grid.Column="4" Grid.Row="5" x:Name="QuickPos10" Text="10" FontSize="45" FontAttributes="Bold" BackgroundColor="#2d0c98" TextColor="White" ></Button>
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
