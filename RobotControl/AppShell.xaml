<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RobotControl.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RobotControl"
    Shell.FlyoutBehavior="Flyout"
    Title="RobotControl"


    >

    <Shell.TitleView >
        <Grid >
            <Button WidthRequest="80" Text="Send" TextColor="White" BackgroundColor="#2d0c98" FontAttributes="Bold" HeightRequest="50" HorizontalOptions="Center" Margin="0,0,80,0"> </Button>
            <Button Margin="10,5" Clicked="BTConnBtn_Clicked" HorizontalOptions="End" BackgroundColor="Transparent" TextColor="White" Text="тео" FontAttributes="Bold" FontSize="20" x:Name="BTConnBtn"></Button>
        </Grid>
        
    </Shell.TitleView>

   

    <FlyoutItem Title="Main" >
        <Tab>
            <ShellContent
               Title="Main"
               ContentTemplate="{DataTemplate local:MainPage}"
               Route="MainPage" />
        </Tab>

    </FlyoutItem>
    <FlyoutItem Title="Left Hand" >
        <Tab>
            <ShellContent
               Title="Left Hand"
               ContentTemplate="{DataTemplate local:LHand}"
               Route="LHandPage" />  
        </Tab>

    </FlyoutItem>

</Shell>
 